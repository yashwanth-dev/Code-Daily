        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "jsx": "react",
        "allowSyntheticDefaultImports":true,
        "esModuleInterop": true,
        "target": "es5",
        "strictNullChecks": true
